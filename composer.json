{
    "name": "norman-huth/nova-hooks",
    "description": "Add hooks to Laravel Nova",
    "keywords": [
        "laravel",
        "nova",
        "tool"
    ],
    "authors": [
        {
            "name": "Norman Huth",
            "homepage": "https://huth.it"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "laravel/nova": "^4.10.00"
    },
    "autoload": {
        "psr-4": {
            "NormanHuth\\NovaHooks\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NormanHuth\\NovaHooks\\ToolServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "laravel/pint": "^1.14"
    }
}
